<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dip" />
            <size android:height="2dp"/>
            <!--<solid android:color="#3c3628" />-->
            <gradient
                android:angle="270"
                android:centerColor="#3f3a2b"
                android:centerY="0.75"
                android:endColor="#3f3a2b"
                android:startColor="#3f3a2b" />
        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress">
        <shape>
            <corners android:radius="5dip" />
            <size android:height="2dp"/>
            <gradient
                android:angle="270"
                android:centerColor="#3f3a2b"
                android:centerY="0.75"
                android:endColor="#3f3a2b"
                android:startColor="#3f3a2b" />
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dip" />
                <size android:height="2dp"/>
                <gradient
                    android:angle="270"
                    android:centerColor="#42c358"
                    android:centerY="0.75"
                    android:endColor="#42c358"
                    android:startColor="#42c358" />
            </shape>
        </clip>

    </item>

</layer-list>